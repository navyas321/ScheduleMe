<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/syllabus_scanner_icon"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp"
        android:id="@+id/syllabusScannerButton" />

    <TextView
        android:text="Syllabus Scanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/syllabusScannerTextBox"
        android:layout_below="@+id/syllabusScannerButton"
        android:layout_alignLeft="@+id/syllabusScannerButton"
        android:layout_alignStart="@+id/syllabusScannerButton"
        android:layout_alignRight="@+id/syllabusScannerButton"
        android:layout_alignEnd="@+id/syllabusScannerButton"
        android:textAlignment="center" />

    <TextView
        android:text="GPA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gpaTextBox"
        android:layout_below="@+id/gpaButton"
        android:layout_alignLeft="@+id/gpaButton"
        android:layout_alignStart="@+id/gpaButton"
        android:layout_alignRight="@+id/gpaButton"
        android:layout_alignEnd="@+id/gpaButton"
        android:textAlignment="center" />

    <TextView
        android:text="Study Room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/studyRoomTextBox"
        android:layout_below="@+id/studyRoomButton"
        android:layout_alignLeft="@+id/studyRoomButton"
        android:layout_alignStart="@+id/studyRoomButton"
        android:layout_alignRight="@+id/studyRoomButton"
        android:layout_alignEnd="@+id/studyRoomButton"
        android:textAlignment="center" />

    <TextView
        android:text="Office Hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/officeHrsTextBox"
        android:layout_below="@+id/officeHrsButton"
        android:layout_alignLeft="@+id/officeHrsButton"
        android:layout_alignStart="@+id/officeHrsButton"
        android:layout_alignRight="@+id/officeHrsButton"
        android:layout_alignEnd="@+id/officeHrsButton"
        android:textAlignment="center" />

    <TextView
        android:text="Schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scheduleTextBox"
        android:layout_below="@+id/scheduleButton"
        android:layout_alignLeft="@+id/scheduleButton"
        android:layout_alignStart="@+id/scheduleButton"
        android:layout_alignRight="@+id/scheduleButton"
        android:layout_alignEnd="@+id/scheduleButton"
        android:textAlignment="center" />

    <TextView
        android:text="Important Dates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/impDatesTextBox"
        android:layout_below="@+id/impDatesButton"
        android:layout_alignLeft="@+id/impDatesButton"
        android:layout_alignStart="@+id/impDatesButton"
        android:textAlignment="center"
        android:layout_alignRight="@+id/impDatesButton"
        android:layout_alignEnd="@+id/impDatesButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/study_room_icon"
        android:id="@+id/studyRoomButton"
        android:layout_alignTop="@+id/gpaButton"
        android:layout_alignLeft="@+id/syllabusScannerTextBox"
        android:layout_alignStart="@+id/syllabusScannerTextBox"
        android:layout_alignRight="@+id/syllabusScannerTextBox"
        android:layout_alignEnd="@+id/syllabusScannerTextBox" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/officeHrsButton"
        android:layout_alignTop="@+id/studyRoomButton"
        android:layout_alignLeft="@+id/impDatesTextBox"
        android:layout_alignStart="@+id/impDatesTextBox" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/gpa_icon"
        android:id="@+id/gpaButton"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/scheduleTextBox"
        android:layout_alignStart="@+id/scheduleTextBox"
        android:layout_alignRight="@+id/scheduleTextBox"
        android:layout_alignEnd="@+id/scheduleTextBox" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/impDatesButton"
        android:layout_alignTop="@+id/syllabusScannerButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="37dp"
        android:layout_marginEnd="37dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/schedule_icon"
        android:id="@+id/scheduleButton"
        android:layout_alignTop="@+id/syllabusScannerButton"
        android:layout_toLeftOf="@+id/syllabusScannerButton"
        android:layout_toStartOf="@+id/syllabusScannerButton"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp" />
</RelativeLayout>
